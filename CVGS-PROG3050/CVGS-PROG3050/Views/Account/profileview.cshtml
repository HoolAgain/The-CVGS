@model CVGS_PROG3050.Models.ProfileViewModel
@{
    ViewData["Title"] = "profile";
}
<h1>@ViewData["Title"]</h1>

<div class="text-center">
    <h2>Your Profile</h2>

    <form asp-controller="Profile" asp-action="" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>

        <label asp-for="UserName">Username:</label>
        <input asp-for="UserName" id="loginUserName" name="loginUserName" class="form-control"/>

        <br />
        <label asp-for="Email">Email:</label>
        <input asp-for="Email" id="ProfileEmail" name="ProfileEmail" class="form-control" />
        
        <br />
        <label asp-for="FirstName">First Name:</label>
        <input asp-for="FirstName" type="text" id="ProfileFirstName" name="ProfileFirstName" />
        <br />
        <label asp-for="LastName">Last Name:</label>
        <input asp-for="LastName" type="text" id="ProfileLastName" name="ProfileLastName" />
        <br />
        <label asp-for="Gender">Gender:</label> 
        <select asp-for="Gender" id="ProfileGender" name="ProfileGender"> <option value="">Select an option</option> <option value="Man">Man</option> <option value="Woman">Woman</option> <option value="Other">Other</option> </select>
        <br />
        <label asp-for="BirthDate">Birth Day:</label>
        <input asp-for="BirthDate" type="date" id="ProfileBirthDate" name="ProfileBirthDate" class="date-picker"/>
        <br />
        <label asp-for="PromotionalEmails">Would you like to receive promotional emails from CVGS?:</label> 
        <input asp-for="PromotionalEmails" type="checkbox" id="ProfilePromoEmails" name="ProfilePromoEmails" />
        <br />
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-controller="" asp-action="" class="btn btn-primary">Cancel</a>
    </form>

