@model CVGS_PROG3050.Models.ProfileViewModel

@{
    ViewData["Title"] = "profile";
}
<h1 class="audiowide-regular">@ViewData["Title"]</h1>

<div class="text-center">
    <h2 class="audiowide-regular">Your Profile</h2>

    <form asp-controller="Account" asp-action="UpdateProfile" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        @Html.HiddenFor(m => m.UserName)
        @Html.HiddenFor(m => m.Email)
        @Html.HiddenFor(m => m.StreetAddress)
        @Html.HiddenFor(m => m.City)
        @Html.HiddenFor(m => m.Province)
        <label asp-for="UserName">Username:</label>
        <input asp-for="UserName" id="loginUserName" class="form-control"/>

        <br />
        <label asp-for="Email">Email:</label>
        <input asp-for="Email" id="ProfileEmail" class="form-control" />
        
        <br />
        <label asp-for="FirstName">First Name:</label>
        <input asp-for="FirstName" type="text" id="ProfileFirstName" class="form-control" />
        <br />
        <label asp-for="LastName">Last Name:</label>
        <input asp-for="LastName" type="text" id="ProfileLastName" class="form-control" />
        <br />
        <label asp-for="Gender">Gender:</label> 
        <select asp-for="Gender" class="form-control" id="ProfileGender"> 
            <option value="">Select an option</option> 
            <option value="Man">Man</option> 
            <option value="Woman">Woman</option> 
            <option value="Woman">Woman</option> 
            <option value="Other">Other</option> 
        </select>
        <br />
        <label asp-for="BirthDate">Birth Day:</label>
        <input asp-for="BirthDate" class="form-control" type="date" id="ProfileBirthDate" class="date-picker" />
        <br />
        <label asp-for="PromotionalEmails">Would you like to receive promotional emails from CVGS?:</label> 
        <input asp-for="PromotionalEmails" type="checkbox" id="ProfilePromoEmails" />
        <br />
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-controller="Account" asp-action="Profile" class="btn btn-primary">Cancel</a>
    </form>

    <h3 class="audiowide-regular">Prefrences</h3>
    <form asp-controller="Account" asp-action="UserPreferences" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>

        <label for="FavoriteGamingPlatform">Favorite gaming platform (or platforms):</label> 
        <select asp-for="FavoritePlatform" class="form-control">
            <option value="PC">PC</option>
            <option value="Xbox">Xbox</option>
            <option value="PlayStation">PlayStation</option>
            <option value="Nintendo">Nintendo</option>
            <option value="Mobile">Mobile</option>
        </select>
        

        <br />
        <label for="FavoriteGameCategory">Favorite game category (or categories):</label> 
        <select asp-for="FavoriteCategory" class="form-control">
            <option value="Action">Action</option>
            <option value="Adventure">Adventure</option>
            <option value="RolePlaying">Role-Playing</option>
        </select>
        <br />

        <label for="LanguagePreferences">Language preferences:</label>
        <select asp-for="LanguagePreference" class="form-control">
           <option value="English">English</option>
           <option value="French">French</option>
           <option value="Spanish">Spanish</option>
           <option value="Mandarin">Mandarin</option>
       </select>

        <br />
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-controller="Account" asp-action="Profile" class="btn btn-primary">Cancel</a>
    </form>

    <h3 class="audiowide-regular">Shipping Information</h3>

    <form asp-controller="Account" asp-action="UserShipping" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        
        <label asp-for="Country" for="Country">Country:</label>
        <input asp-for="Country" class="form-control" type="text" id="Country" />
        <br />
        <label asp-for="FullName" for="FullName">Full name (First and Last name):</label>
        <input asp-for="FullName" class="form-control" type="text" id="FullName" />
        <br />
        <label asp-for="PhoneNumber" for="PhoneNumber">Phone number:</label>
        <input asp-for="PhoneNumber" class="form-control" type="tel" id="PhoneNumber" />
        <br />
        <label asp-for="StreetAddress" for="StreetAddress">Street address:</label>
        <input asp-for="StreetAddress" class="form-control" type="text" id="StreetAddress"/>
        <br />
        <label asp-for="Address2" for="AptSuite">Apt - Suite:</label>
        <input asp-for="Address2" class="form-control" type="text" id="AptSuite"/>
        <br />
        <label asp-for="City" for="City">City:</label>
        <input asp-for="City" class="form-control" type="text" id="City"/>
        <br />
        <label asp-for="Province" for="Province">Province:</label>
        <input asp-for="Province" class="form-control" type="text" id="Province" />
        <br />
        <label asp-for="PostalCode" for="PostalCode">Postal code:</label>
        <input asp-for="PostalCode" class="form-control" type="text" id="PostalCode" />
        <br />
        <label asp-for="DeliveryInstructions" for="DeliveryInstructions">Delivery instructions:</label>
        <textarea asp-for="DeliveryInstructions" class="form-control" id="DeliveryInstructions" ></textarea>
        <br />
        <label asp-for="MailingSameAsShipping" for="SameAddress">Mailing and shipping address are the same:</label>
        <input asp-for="MailingSameAsShipping" type="checkbox" id="SameAddress" />
        <br />

        <div id="shippingAddressSection">
            <label asp-for="ShippingCountry" for="ShippingCountry">Country:</label>
            <input asp-for="ShippingCountry" class="form-control" type="text" id="ShippingCountry"/>
            <br />
            <label asp-for="ShippingFullName" for="ShippingFullName">Full name (First and Last name):</label>
            <input asp-for="ShippingFullName" class="form-control" type="text" id="ShippingFullName" />
            <br />
            <label asp-for="ShippingPhoneNumber" for="ShippingPhoneNumber">Phone number:</label>
            <input asp-for="ShippingPhoneNumber" class="form-control" type="tel" id="ShippingPhoneNumber" />
            <br />
            <label asp-for="ShippingStreetAddress" for="ShippingStreetAddress">Street address:</label>
            <input asp-for="ShippingStreetAddress" class="form-control" type="text" id="ShippingStreetAddress"/>
            <br />
            <label asp-for="ShippingAddress2" for="ShippingAptSuite">Apt - Suite:</label>
            <input asp-for="ShippingAddress2" class="form-control" type="text" id="ShippingAptSuite"/>
            <br />
            <label asp-for="ShippingCity" for="ShippingCity">City:</label>
            <input asp-for="ShippingCity" class="form-control" type="text" id="ShippingCity"/>
            <br />
            <label asp-for="ShippingProvince" for="ShippingProvince">Province:</label>
            <input asp-for="ShippingProvince" class="form-control" type="text" id="ShippingProvince"/>
            <br />
            <label asp-for="ShippingPostalCode" for="ShippingPostalCode">Postal code:</label>
            <input asp-for="ShippingPostalCode" class="form-control" type="text" id="ShippingPostalCode" />
            <br />
            <label asp-for="ShippingDeliveryInstructions" for="ShippingDeliveryInstructions">Delivery instructions:</label>
            <textarea asp-for="ShippingDeliveryInstructions" class="form-control" id="ShippingDeliveryInstructions" ></textarea>
            <br />

        </div>


        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-controller="Account" asp-action="Profile" class="btn btn-primary">Cancel</a>
    </form>
</div>
